<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.testes.agenda.MainActivity"
    android:background="@drawable/bg1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_string"
        android:textSize="45px"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:textStyle="bold|italic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvPrincipal"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/ivAgenda"
        android:src="@drawable/book1_shadow"
        android:layout_below="@+id/tvPrincipal"
        android:layout_centerHorizontal="true" />

    <!--<ImageView-->
        <!--android:layout_width="65dp"-->
        <!--android:layout_height="65dp"-->
        <!--android:id="@+id/ivAddContato"-->
        <!--android:elevation="10dp"-->
        <!--android:background="@drawable/oval"-->
        <!--android:src="@drawable/btn_sign_add"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignEnd="@+id/tvPrincipal" />-->

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/criar_contato"
        android:id="@+id/btCriarContato"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/layout_botao"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/criar_evento"
        android:id="@+id/btCriarEvento"
        style="@style/layout_botao"
        android:layout_below="@+id/btCriarContato"
        android:layout_alignStart="@+id/btCriarContato"
        android:layout_marginTop="10dp"
        android:background="@color/meuAzul"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Listar Contatos"
        android:id="@+id/btListarContato"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/layout_botao"
        android:background="#F44336"
        android:layout_below="@+id/btCriarEvento"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Listar Eventos"
        android:id="@+id/btListarEvento"
        style="@style/layout_botao"
        android:layout_below="@+id/btListarContato"
        android:layout_alignStart="@+id/btCriarContato"
        android:layout_marginTop="10dp"
        android:background="@color/amber"
        />

</RelativeLayout>
